{
  "name": "electron-react-webpack-seed",
  "version": "1.0.0",
  "description": "Electron React Webpack Seed",
  "main": "main.js",
  "repository": "https://github.com/altaudio/electron-react-webpack-seed.git",
  "author": "Alex Smith <alex.smith@mubaloo.com>",
  "license": "NONE",
  "scripts": {
    "format:js": "prettier --single-quote --trailing-comma none --print-width 180 --write \"src/**/*.js\"",
    "lint:js": "eslint \"src/**/*.js\"",
    "inspect:js": "jsinspect src",
    "build": "babel src/main.js --out-dir build && cp src/index.html build/index.html",
    "bundle": "webpack --watch src",
    "dev": "yarn build && concurrently \"yarn bundle\" \"electron build/main.js\""
  },
  "dependencies": {
    "react": "^16.8.2",
    "react-dom": "^16.8.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "babel-polyfill": "^6.26.0",
    "concurrently": "^4.1.0",
    "electron": "^4.0.5",
    "electron-reload": "^1.4.0",
    "eslint": "^5.14.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-react": "^7.11.1",
    "husky": "^1.3.1",
    "jsinspect": "^0.12.7",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3"
  },
  "lint-staged": {
    "src/**/*.js": [
      "npm run format:js",
      "npm run lint:js",
      "git add ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run inspect:js && lint-staged"
    }
  }
}
